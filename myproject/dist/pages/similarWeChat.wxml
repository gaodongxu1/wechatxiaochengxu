
  <view class="background">
    <view class="border input">
      <input placeholder="点击搜索" auto-focus/>
    </view>
    <view class="backgroundcar">
      <swiper style="width: 340px; height: 205px;" indicator-dots="true" autoplay="true" interval="3200" duration="500">
        <block  wx:for="{{cars}}" wx:key="index">
          <swiper-item>
            <image src="{{item}}" style="width: 340px; height: 195px"/>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <view class="name-icon">
      <view nameicon-column="nameicon-column">
        <view>
          <image bindtap="car-icon" class="caricon-size" src="{{toyota}}"/>
        </view>
        <text bindtap="car-name" class="car-name">丰田</text>
      </view>
      <view nameicon-column="nameicon-column">
        <view>
          <image bindtap="car-icon" class="caricon-size" src="{{dasauto}}"/>
        </view>
        <text bindtap="car-name" class="car-name">大众</text>
      </view>
      <view nameicon-column="nameicon-column">
        <view>
          <image bindtap="car-icon" class="caricon-size" src="{{honda}}"/>
        </view>
        <text bindtap="car-name" class="car-name">本田</text>
      </view>
      <view nameicon-column="nameicon-column">
        <view>
          <image bindtap="car-icon" class="caricon-size" src="{{bmw}}"/>
        </view>
        <text bindtap="car-name" class="car-name">宝马</text>
      </view>
      <view nameicon-column="nameicon-column">
        <view>
          <image bindtap="car-icon" class="caricon-size" src="{{kia}}"/>
        </view>
        <text bindtap="car-name" class="car-name">起亚</text>
      </view>
      <view nameicon-column="nameicon-column">
        <view>
          <image bindtap="car-icon" class="caricon-size" src="{{benz}}"/>
        </view>
        <text bindtap="car-name" class="car-name">奔驰</text>
      </view>
    </view>
    <view class="topic">
      <view class="topic-o">
        <text bindtap="want" style="color:{{colorwant}}">我要选车</text>
      </view>
      <view class="topic-o">
        <text bindtap="Freetestdrive" style="color:{{colortryon}}">试驾评测</text>
      </view>
    </view>
    <view class="car-layout">
